{
  "name": "@ark-project/core",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "generate-contracts": "ts-node scripts/generateContracts.ts",
    "build": "npm run generate-contracts && rollup -c",
    "dev": "nodemon --watch ../../contracts.json --exec 'npm run generate-contracts' & tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest tests -i"
  },
  "dependencies": {
    "@scure/starknet": "^0.3.0",
    "cross-env": "^7.0.3",
    "starknet": "5.27.0"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "@types/jest": "^29.5.5",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@ark-project/eslint-config": "workspace:*",
    "@ark-project/typescript-config": "workspace:*",
    "@types/node": "^20.10.7",
    "esbuild": "^0.20.2",
    "eslint": "^8.48.0",
    "eslint-plugin-mocha": "^10.2.0",
    "mocha": "^10.3.0",
    "rollup": "^4.14.3",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.4",
    "viem": ">=0.3.35"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
